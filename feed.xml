---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title type='text' xml:lang="en">{{ site.title | xml_escape }} |</title>
    <link rel="hub" href="http://www.betweenpipes.com"/>
		<link type="application/atom+xml" rel="self" href="http://betweenpipes.com/atom.xml"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
		<id>http://www.betweenpipes.com/</id>
    <author>
      <name>Ed Wassermann</name>
      <email>betweenscreens@gmail.com</email>
    </author>

    {% for post in site.posts limit:20 %}
      <entry>
				<title>{{ post.title | xml_escape }} â€” {{ post.excerpt | xml_escape }}</title>
        <published>{{ post.date | date_to_rfc822 }}</published>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>

				{% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}

		  </entry>
    {% endfor %}

</feed>
